<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <TextView
       android:id="@+id/login_title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/login"
       android:textSize="25sp"
       android:textStyle="bold"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent" />

   <EditText
       android:id="@+id/login_id"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/text_line"
       android:textColor="@color/cardview_dark_background"
       android:minHeight="48dp"
       android:text="@string/id"
       android:textSize="25sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintTop_toBottomOf="@id/login_title"
       app:layout_constraintVertical_bias="0.45" />

   <EditText
       android:id="@+id/login_password"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/text_line"
       android:textColor="@color/cardview_dark_background"
       android:minHeight="48dp"
       android:text="@string/password"
       android:textSize="25sp"
       app:layout_constraintTop_toBottomOf="@id/login_id" />

   <Button
       android:id="@+id/login_press"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/login"
       android:background="@drawable/rectangle_button"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toBottomOf="@id/login_password" />

   <ImageButton
       android:id="@+id/icon_google"
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:scaleType="fitCenter"
       android:src="@drawable/ic_logo_google"
       app:layout_constraintRight_toLeftOf="@id/icon_naver"

       app:layout_constraintTop_toBottomOf="@id/login_press" />

   <ImageButton
       android:id="@+id/icon_naver"
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:scaleType="fitCenter"
       android:src="@drawable/ic_logo_naver"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toBottomOf="@id/login_press" />

   <ImageButton
       android:id="@+id/icon_kakao"
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:scaleType="fitCenter"
       android:src="@drawable/ic_logo_kakao"
       app:layout_constraintLeft_toRightOf="@id/icon_naver"
       app:layout_constraintTop_toBottomOf="@id/login_press" />

   <Button
       android:id="@+id/sign_up"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="32dp"
       android:background="@drawable/rectangle_button"
       android:text="@string/sign_up"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toLeftOf="@id/find_password"
       app:layout_constraintTop_toBottomOf="@id/icon_google" />

   <Button
       android:id="@+id/find_password"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/rectangle_button"
       android:text="@string/find_password"
       app:layout_constraintLeft_toRightOf="@id/sign_up"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toBottomOf="@id/icon_kakao" />

</androidx.constraintlayout.widget.ConstraintLayout>