<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <TextView
       android:id="@+id/login_title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:text="로그인"
       android:textSize="25sp"
       android:textStyle="bold" />
   <EditText
       android:id="@+id/login_id"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/text_line"
       android:text="아이디"
       app:layout_constraintTop_toBottomOf="@id/login_title"
       app:layout_constraintBottom_toBottomOf="parent"
       android:textSize="25sp" />
   <EditText
       android:id="@+id/login_password"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/login_id"
       android:background="@drawable/text_line"
       android:text="비밀번호"
       android:textSize="25sp" />
   <Button
       android:id="@+id/login_press"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/login_password"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:text="로그인" />
   <ImageButton
       android:id="@+id/icon_google"
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:src="@drawable/ic_logo_google"
       app:layout_constraintRight_toLeftOf="@id/icon_naver"
       app:layout_constraintTop_toBottomOf="@id/login_press"

       android:scaleType="fitCenter"/>
   <ImageButton
       android:id="@+id/icon_naver"
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:src="@drawable/ic_logo_naver"
       app:layout_constraintTop_toBottomOf="@id/login_press"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:scaleType="fitCenter"/>
   <ImageButton
       android:id="@+id/icon_kakao"
       android:layout_width="40dp"
       android:layout_height="40dp"
       app:layout_constraintTop_toBottomOf="@id/login_press"
       android:src="@drawable/ic_logo_kakao"
       app:layout_constraintLeft_toRightOf="@id/icon_naver"
       android:scaleType="fitCenter"/>
   <Button
       android:id="@+id/sign_up"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:backgroundTint="#00000000"
       android:textColor="@color/black"
       app:layout_constraintTop_toBottomOf="@id/icon_google"
       app:layout_constraintRight_toLeftOf="parent"
       app:layout_constraintLeft_toRightOf="@id/find_password"
       android:text="회원가입"/>
   <Button
       android:id="@+id/find_password"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:backgroundTint="#00000000"
       android:textColor="@color/black"
       app:layout_constraintTop_toBottomOf="@id/icon_kakao"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintLeft_toLeftOf="@id/sign_up"
       android:text="비밀번호 찾기"/>

</androidx.constraintlayout.widget.ConstraintLayout>