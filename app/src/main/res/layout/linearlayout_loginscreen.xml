<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/loginTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="로그인"
            android:textSize="25sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <EditText
            android:id="@+id/loginId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:background="@drawable/text_line"
            android:text="아이디"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/loginPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:background="@drawable/text_line"
            android:text="비밀번호"
            android:textSize="25sp" />
        <Button
            android:id="@+id/loginPress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/iconGoogle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_logo_google"
                android:scaleType="fitCenter"></ImageButton>
            <ImageButton
            android:id="@+id/iconNaver"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_logo_naver"
            android:scaleType="fitCenter"></ImageButton>
            <ImageButton
                android:id="@+id/iconKakao"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_logo_kakao"
                android:scaleType="fitCenter"></ImageButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
            android:id="@+id/signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00000000"
            android:textColor="@color/black"
            android:text="회원가입"></Button>
        <Button
            android:id="@+id/findPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00000000"
            android:textColor="@color/black"
            android:text="비밀번호 찾기"></Button>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>